{% extends 'layout.html.twig' %}
{% block title %}Main Menu{% endblock %}
{% block content %}
  <div class="col-md-12">
    {% for message in app.flashes('notice') %}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      {# you can read and display just one flash message type... #}
          <div class="flash-notice">
              <strong>{{ message }}</strong>
          </div>
    </div>
    {% endfor %}
    <a href="{{path('homepage.create')}}" class="btn btn-lg btn-success" style="float: right">Create new Role</a>
    <br>
    <br>
    <br>
    <table class="table table-striped table-hover" id="roletable">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Edit/Delete</th>
        </tr>
      </thead>
      <tbody>
        {% for roledata in role %}
          <tr>
            <td>{{roledata.id}}</td>
            <td>{{roledata.name}}</td>
            <td>{{roledata.description}}</td>
            <td><a href="{{path('role.read',{'id':roledata.id})}}" class="btn btn-secondary">View</a>
              <a href="{{path('role.update',{'id':roledata.id})}}" class="btn btn-primary">Edit</a>
              <a href="{{path('role.delete',{'id':roledata.id})}}" class="btn btn-danger">Delete</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock %}
{% block documentReady %}
 $('#roletable').DataTable();
{% endblock documentReady %}
